<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingTop="16dp"
              android:paddingLeft="@dimen/text_margin">

   <ImageView
        android:id="@+id/iv_icon_ILN"
        android:layout_width="@dimen/news_thumb_size"
        android:layout_height="@dimen/news_thumb_size"
       />

   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_ILN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Care Giving Reminders,"
            android:layout_marginLeft="@dimen/news_item_text_left_margin"
            style="@style/textTitle"/>

        <TextView
            android:id="@+id/tv_category_ILN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/news_item_category_margin_top"
            android:layout_alignLeft="@id/tv_title_ILN"
            style="@style/textCategory"
            tools:text="Care Giving"/>

	     <TextView
		    android:id="@+id/tv_time_ILN"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_alignLeft="@id/tv_title_ILN"
            android:layout_below="@id/tv_category_ILN"
            tools:text="12:57 am"
            style="@style/textCategory"/>

       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="@color/gray_light"
           android:layout_alignLeft="@id/tv_title_ILN"
           android:layout_below="@id/tv_time_ILN"
           android:layout_marginTop="@dimen/news_item_line_margin_top"/>

    </RelativeLayout>

</LinearLayout>