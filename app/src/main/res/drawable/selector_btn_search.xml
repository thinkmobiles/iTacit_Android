<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_pressed="false">
		<shape android:shape="rectangle">

			<solid android:color="@color/btn_blue"/>

			<padding android:bottom="@dimen/padding_btn_top"
			         android:top="@dimen/padding_btn_top"
			         android:left="@dimen/padding_btn_side"
			         android:right="@dimen/padding_btn_side"/>

			<corners android:bottomLeftRadius="@dimen/corner_radius_btn"
			         android:bottomRightRadius="@dimen/corner_radius_btn"
			         android:topLeftRadius="@dimen/corner_radius_btn"
			         android:topRightRadius="@dimen/corner_radius_btn"/>


		</shape>
	</item>

	<item android:state_pressed="true">
		<shape android:shape="rectangle">

			<solid android:color="@color/colorPrimary"/>

			<padding android:bottom="@dimen/padding_btn_top"
			         android:top="@dimen/padding_btn_top"
			         android:left="@dimen/padding_btn_side"
			         android:right="@dimen/padding_btn_side"/>

			<corners android:bottomLeftRadius="@dimen/corner_radius_btn"
			         android:bottomRightRadius="@dimen/corner_radius_btn"
			         android:topLeftRadius="@dimen/corner_radius_btn"
			         android:topRightRadius="@dimen/corner_radius_btn"/>

		</shape>
	</item>

</selector>