<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <size
                        android:width="26dp"
                        android:height="21dp" />
                    <solid android:color="#00000000" />
                    <padding
                        android:left="7dp"
                        android:top="2dp"
                        android:right="2dp"
                        android:bottom="2dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/btn_blue" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape>
                    <size
                        android:width="26dp"
                        android:height="21dp" />
                    <solid android:color="#00000000" />
                    <padding
                        android:left="7dp"
                        android:top="2dp"
                        android:right="2dp"
                        android:bottom="2dp" />
                </shape>
            </item>
            <item>
                <shape  android:shape="oval"
                        xmlns:android="http://schemas.android.com/apk/res/android">
                    <stroke
                        android:width="0.5dp" android:color="@color/btn_blue"/>
                    <solid android:color="@null"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
