<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textCategory">
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="textArticle" parent="textCategory">
        <item name="android:textColor">@color/text_dark_grey</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textTitle" parent="textCategory">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_dark_grey</item>
    </style>

    <style name="tv_date">
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_tv_date</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="labelFilter">
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/btn_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
