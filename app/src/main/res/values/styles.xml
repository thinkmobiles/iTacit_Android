<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/text_dark_grey</item>
    </style>


    <style name="textCategory">
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textContent">
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textArticle">
        <item name="android:textColor">@color/text_dark_grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textTitle" >
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="tv_done">
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="tv_date">
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:background">@drawable/bg_btn_date</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="labelFilter">
	    <item name="android:textSize">16sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/btn_blue</item>
    </style>

	<style name="line_separator">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">1dp</item>
		<item name="android:background">@color/gray_light</item>
	</style>

    <style name="shadow_bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@drawable/bottom_shadow</item>
    </style>

</resources>
